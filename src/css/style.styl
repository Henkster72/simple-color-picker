pickerSize = 150px
pickerHueWidth = 20px

.scp
  width pickerSize + pickerHueWidth + 5px
  height pickerSize
  padding 5px
  user-select none
  position relative
  
  .saturation
    position relative
    width calc(100% - 25px)
    height 100%
    background linear-gradient(to right, #FFFFFF 0%, #FF0000 100%);
    float left
    margin-right 5px
  
  .brightness
    width 100%
    height 100%
    background linear-gradient(to top, rgba(0, 0, 0, 1) 0%, rgba(255, 255, 255, 0) 100%);
  
  .sb-selector
    border 2px solid
    border-color white
    position absolute
    width 10px
    height 10px
    background white
    border-radius 10px
    top -5px
    left -5px

  .hue
    width pickerHueWidth
    height 100%
    background blue
    position relative
    float left
    background linear-gradient(to bottom, rgb(255, 0, 0) 0%, rgb(255, 0, 255) 17%, rgb(0, 0, 255) 34%, rgb(0, 255, 255) 50%, rgb(0, 255, 0) 67%, rgb(255, 255, 0) 84%, rgb(255, 0, 0) 100%)
    
  .h-selector
    position absolute
    width 100%
    
    .right
      width 0
      height 0
      border-style solid
      position absolute
      
    .right
      right -3px
      background white
      width 10px
      height 2px
      border none
      border-bottom 1px solid black
